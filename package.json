{
  "name": "solarnetwork-datum-loader",
  "version": "2.0.4-dev.0",
  "description": "SolarNetwork Datum Loader",
  "keywords": [
    "solarnetwork"
  ],
  "homepage": "https://github.com/SolarNetwork/sn-datum-loader-js",
  "license": "Apache-2.0",
  "author": {
    "name": "SolarNetwork Foundation",
    "email": "code@solarnetwork.net"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SolarNetwork/sn-datum-loader-js.git"
  },
  "type": "module",
  "main": "lib/index.js",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/solarnetwork-datum-loader.es.cjs"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "ava": {
    "files": [
      "src/test/**/*Tests.ts"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "build/"
      },
      "compile": "tsc"
    }
  },
  "c8": {
    "exclude": [
      "src/test/**"
    ],
    "exclude-after-remap": true,
    "reporter": [
      "text",
      "html"
    ]
  },
  "config": {
    "generateRelease": {
      "no_confirm": false,
      "remote": "origin",
      "pre_commit_commands": [
        "npm run prettier:write",
        "npm run lint",
        "npm run build",
        "npm run build:dist",
        "npm run build:bundle",
        "npm run build:bundle:cjs"
      ],
      "post_commit_commands": [
        "npm test"
      ],
      "post_complete_commands": [
        "npm publish",
        "npmversion --increment prepatch --preid dev --nogit-tag"
      ],
      "files_to_commit": [
        "./lib/*"
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "build:dist": "tsc --build tsconfig.dist.json",
    "build:bundle": "rollup --config rollup.config.mjs --banner \"$(preamble)\" -m -o lib/solarnetwork-datum-loader.es.js",
    "build:bundle:cjs": "rollup --config rollup.config.cjs.mjs --format cjs --banner \"$(preamble)\" -m -o lib/solarnetwork-datum-loader.es.cjs",
    "pretest": "npm run build",
    "test": "c8 ava",
    "coverage": "c8 --reporter=lcov ava",
    "preapidoc": "npm run build",
    "apidoc": "typedoc",
    "release": "generate-release --current-version \"$(bin/remove-preid.cjs)\"",
    "lint": "eslint --ext .ts --fix src/main",
    "prettier": "prettier --config .prettierrc.json \"src/**/*.ts\" --check",
    "prettier:write": "prettier --config .prettierrc.json \"src/**/*.ts\" --write"
  },
  "dependencies": {
    "d3-queue": "^3.0.7"
  },
  "peerDependencies": {
    "solarnetwork-api-core": "2.x"
  },
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@tsconfig/node18": "^18.2.4",
    "@types/crypto-js": "^4.2.2",
    "@types/d3-array": "^3.2.1",
    "@types/d3-collection": "^1.0.13",
    "@types/d3-queue": "^3.0.10",
    "@types/d3-time": "^3.0.4",
    "@types/d3-time-format": "^4.0.3",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "ava": "^6.2.0",
    "c8": "^10.1.3",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "generate-release": "^1.1.1",
    "moment": "^2.30.1",
    "npmversion": "^2.0.5",
    "package-preamble": "^0.1.0",
    "rollup": "^4.39.0",
    "semver": "^7.7.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.1",
    "typescript": "^5.8.2",
    "undici": "^7.7.0"
  },
  "overrides": {
    "json5": "2.2.3",
    "lodash": "4.17.21",
    "minimist": "1.2.8",
    "semver": "$semver"
  }
}
